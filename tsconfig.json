{
    "compilerOptions": {
        "target": "es2016",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "baseUrl": "./",
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "dist", "__tests__"]
}
